{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "declaration": true,
    "sourceMap": true,
    "noEmitOnError": true,
    "pretty": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dest",
    "paths": {
      "@metagram/models": ["modules/@metagram/models"]
    }
  },
  "include": [
    "./custom_typings/*.d.ts",
    "./modules/@metagram/framework/index.ts",
    "./modules/@metagram/framework/bin/metagram.ts",
    "./modules/@metagram/models/index.ts",
    "./modules/**/*.browser.ts"
  ]
}
