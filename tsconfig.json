{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "declaration": true,
    "noEmitOnError": true,
    "pretty": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dest",
    "paths": {
      "@metagram/models": ["modules/@metagram/models"]
    }
  },
  "files": [
    "./custom_typings/canvas.d.ts",
    "./modules/@metagram/framework/index.ts",
    "./modules/@metagram/framework/canvas/BrowserPDFCanvas.ts",
    "./modules/@metagram/framework/canvas/BrowserSVGCanvas.ts",
    "./modules/@metagram/framework/services/BrowserFetchService.ts",
    "./modules/@metagram/models/index.ts"
  ]
}
