{
  "name": "metagram-scrs",
  "version": "1.0.0",
  "description": "Metagram - a web framework for model transformation and digramming",
  "main": "index.js",
  "dependencies": {
    "canvas": "^1.6.2",
    "canvas2svg": "^1.0.16",
    "events": "^1.1.1",
    "jspdf": "^1.3.2",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-fetch": "^1.6.3",
    "reflect-metadata": "^0.1.9",
    "whatwg-fetch": "^2.0.3",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@types/chai": "^3.4.35",
    "@types/jspdf": "^1.1.31",
    "@types/mkdirp": "^0.3.29",
    "@types/mocha": "^2.2.40",
    "@types/ncp": "^2.0.0",
    "@types/node": "^6.0.48",
    "@types/node-fetch": "^1.6.5",
    "@types/xmldom": "^0.1.28",
    "chai": "^3.5.0",
    "copyfiles": "^1.0.0",
    "http-server": "^0.9.0",
    "mocha": "^3.2.0",
    "rimraf": "^2.5.4",
    "typescript": "^2.2.1"
  },
  "scripts": {
    "pretest": "rimraf test && npm run build:test",
    "test": "mocha test/**/*.spec.js --reporter spec",
    "clean": "rimraf dest",
    "prebuild": "npm run clean",
    "build": "npm run build:prod && npm run copy:assets && npm run copy:package",
    "postbuild": "npm run link:models && npm run link:framework",
    "link:framework": "cd dest/framework && npm link @metagram/models && npm link",
    "link:models": "cd dest/models && npm link",
    "build:prod": "tsc -p tsconfig.json",
    "build:test": "tsc -p tsconfig.test.json",
    "watch:prod": "tsc -p tsconfig.json -w",
    "watch:test": "tsc -p tsconfig.test.json -w",
    "start": "http-server out",
    "copy:package": "copyfiles -u 2 ./modules/@metagram/*/package.json ./dest",
    "copy:assets": "copyfiles ./public/**/* ./dest"
  },
  "author": {
