{
  "name": "metagram-scrs",
  "version": "1.0.0",
  "description": "Metagram - a web framework for model transformation and digramming",
  "main": "index.js",
  "dependencies": {
    "canvas": "^1.6.2",
    "canvas2svg": "^1.0.16",
    "events": "^1.1.1",
    "jspdf": "^1.3.2",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "server-fetch": "^1.6.3",
    "reflect-metadata": "^0.1.9",
    "xmldom": "^0.1.27"
  },
  "devDependencies": {
    "@types/jspdf": "^1.1.31",
    "@types/mkdirp": "^0.3.29",
    "@types/ncp": "^2.0.0",
    "@types/server": "^6.0.48",
    "@types/server-fetch": "^1.6.5",
    "@types/xmldom": "^0.1.28",
    "copyfiles": "^1.0.0",
    "rimraf": "^2.5.4",
    "typescript": "^2.1.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rimraf dest",
    "prebuild": "npm run clean",
    "build": "npm run build:typescript && npm run copy:assets && npm run copy:package",
    "postbuild": "npm run link:models && npm run link:framework && npm run link:server",
    "link:framework": "cd dest/framework && npm link @metagram/models && npm link",
    "link:models": "cd dest/models && npm link",
    "link:server": "cd dest/server && npm link @metagram/framework && npm link",
    "build:typescript": "tsc -p tsconfig.json",
    "watch": "npm run watch:typescript",
    "watch:typescript": "tsc -p tsconfig.watch.json",
    "start": "http-server out",
    "copy:package": "copyfiles -u 2 ./modules/@metagram/*/package.json ./dest",
    "copy:assets": "copyfiles ./public/**/* ./dest"
  },
  "author": {
